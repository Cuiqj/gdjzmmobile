<?xml version="1.0" encoding="UTF-8"?>
<pdf:template>
	{{! 路政案件现场勘验图 }}
	<pdf:paper width="841.89" height="610.276" fontName="SimSun" fontSize="10.5" offset="-2.8,4.2"/>
	<pdf:content>
		<pdf:text point="78,4" fontSize="22.5">公路                 现场勘验图</pdf:text>
		<pdf:text point="243,15">案号：</pdf:text>
		<pdf:text point="256,15" static="NO">{{ caseNo }}</pdf:text>
		<pdf:table rect="{10,21},{278,175}" borderWidth="0.5" lineWidth="0.5" padding="1">
			<pdf:tr height="12">
				<pdf:td width="13.5">时间</pdf:td>
				<pdf:td width="76">
					<pdf:text point="mid-left:5,6" static="NO">{{ date.year }}</pdf:text>
					<pdf:text point="mid-left:14,6">年</pdf:text>
					<pdf:text point="mid-left:23,6" static="NO">{{ date.month }}</pdf:text>
					<pdf:text point="mid-left:29,6">月</pdf:text>
					<pdf:text point="mid-left:36,6" static="NO">{{ date.day }}</pdf:text>
					<pdf:text point="mid-left:42,6">日</pdf:text>
					<pdf:text point="mid-left:49,6" static="NO">{{ date.hour }}</pdf:text>
					<pdf:text point="mid-left:55,6">时</pdf:text>
					<pdf:text point="mid-left:61,6" static="NO">{{ date.minute }}</pdf:text>
					<pdf:text point="mid-left:68,6">分</pdf:text>
                </pdf:td>
				<pdf:td width="12.9">地点</pdf:td>
				<pdf:td width="83" static="NO" textAlignment="left">
                    <pdf:text point="mid-left:5,6" static="NO">{{ place }}</pdf:text>
                </pdf:td>
				<pdf:td width="24.6">路面性质</pdf:td>
				<pdf:td width="38" static="NO" fontSize="9" textAlignment="left">
                    <pdf:text point="mid-left:5,6" static="NO">{{ eventReason }}</pdf:text>
                </pdf:td>
                
                <pdf:td width="13">天气</pdf:td>
				<pdf:td width="17" static="NO" textAlignment="left">
                    <pdf:text point="mid-left:3,6" static="NO">{{ weater }}</pdf:text>
                </pdf:td>
			</pdf:tr>
			<pdf:tr height="138.5">
				<pdf:td width="278">
					<pdf:image rect="{0,0},{278,138.5}" url="{{ imagePath }}" static="NO"/>
					<pdf:grid rect="{0,0},{278,138.5}" row="26" column="62" alpha="0.3" />
				</pdf:td>
			</pdf:tr>
			<pdf:tr height="24">
				<pdf:td width="278">
					<pdf:text point="2,1">说明：</pdf:text>
					<pdf:paragraph rect="{2,1},{275,24}" lineHeight="7" indent="head:13" static="NO">{{ comment }}</pdf:paragraph>
				</pdf:td>
			</pdf:tr>
		</pdf:table>
		<pdf:text point="20,200">绘图人（签名）：</pdf:text>
        
        <!--
         <pdf:text point="53,187" static="NO">{{ draftsman }}</pdf:text>
         -->
		<pdf:text point="95,200">勘查人（签名）：</pdf:text>
        
        <!--
         <pdf:text point="112,187" static="NO">{{ inquestman  }}</pdf:text>
         -->
        
		<pdf:text point="170,200">当事人（签名）：</pdf:text>
        
        <pdf:text point="240,200">见证人（签名）：</pdf:text>
	</pdf:content>
</pdf:template>